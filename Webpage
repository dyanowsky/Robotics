<body>
  <div class="wrap">
    <h1>Impact of Robotics Adoption on Electricity Demand</h1>
    <p class="muted">Study period: <strong>2025–2050</strong>. Filter regions (China, Europe, United States, ROW), adjust scenario inputs, and inspect the pivot-style yearly impact table.</p>

    <div class="grid">
      <section class="card">
        <h2>1) Global Market Filter</h2>
        <div class="region-list" id="regionFilters"></div>

        <h3>2) Scenario Inputs (for selected editor region)</h3>
        <div class="field" style="margin-bottom:10px;max-width:280px;">
          <label for="editorRegion">Edit Region Parameters</label>
          <select id="editorRegion"></select>
        </div>

        <div class="inputs" id="inputGrid"></div>

        <div class="kpis">
          <div class="kpi"><div class="label">2050 Direct (TWh)</div><div class="value" id="kpiDirect">-</div></div>
          <div class="kpi"><div class="label">2050 AI/Cloud (TWh)</div><div class="value" id="kpiAI">-</div></div>
          <div class="kpi"><div class="label">2050 Total (TWh)</div><div class="value" id="kpiTotal">-</div></div>
          <div class="kpi"><div class="label">2050 Share of Selected Grid</div><div class="value" id="kpiShare">-</div></div>
        </div>
      </section>

      <section class="card">
        <h2>3) Electricity Demand Trajectory</h2>
        <canvas id="trendChart" height="220"></canvas>
      </section>
    </div>

    <section class="card" style="margin-top:16px;">
      <h2>4) Pivot Table (Yearly Inputs and Demand Impact)</h2>
      <p class="muted" style="margin: 0 0 10px;">Values shown for currently selected regions combined. Units: robot stocks in millions; electricity in TWh.</p>
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th>Year</th>
              <th>Industrial Robots</th>
              <th>Warehouse Robots</th>
              <th>Humanoid Robots</th>
              <th>Consumer Robots</th>
              <th>Direct TWh</th>
              <th>AI/Cloud TWh</th>
              <th>Total TWh</th>
              <th>% of Selected Grid</th>
            </tr>
          </thead>
          <tbody id="pivotBody"></tbody>
        </table>
      </div>
    </section>
  </div>

  <script>
    const START_YEAR = 2025;
    const END_YEAR = 2050;
    const years = Array.from({ length: END_YEAR - START_YEAR + 1 }, (_, i) => START_YEAR + i);

    const regions = {
      China: {
        baseIndustrialM: 3.8, baseWarehouseM: 7.4, baseHumanoidM: 2.2, baseConsumerM: 82,
        growthIndustrial: 0.08, growthWarehouse: 0.12, growthHumanoid: 0.23, growthConsumer: 0.06,
        industrialKWh: 22000, warehouseKWh: 14000, humanoidKWh: 1900, consumerKWh: 420,
        aiMultiplier: 0.62, regionalGridTWh: 9600
      },
      Europe: {
        baseIndustrialM: 2.1, baseWarehouseM: 4.8, baseHumanoidM: 1.2, baseConsumerM: 65,
        growthIndustrial: 0.06, growthWarehouse: 0.1, growthHumanoid: 0.2, growthConsumer: 0.05,
        industrialKWh: 21000, warehouseKWh: 14500, humanoidKWh: 1850, consumerKWh: 400,
        aiMultiplier: 0.58, regionalGridTWh: 4200
      },
      "United States": {
        baseIndustrialM: 2.4, baseWarehouseM: 6.1, baseHumanoidM: 1.6, baseConsumerM: 74,
        growthIndustrial: 0.07, growthWarehouse: 0.11, growthHumanoid: 0.22, growthConsumer: 0.05,
        industrialKWh: 21500, warehouseKWh: 15000, humanoidKWh: 1950, consumerKWh: 410,
        aiMultiplier: 0.64, regionalGridTWh: 4600
      },
      ROW: {
        baseIndustrialM: 4.3, baseWarehouseM: 8.3, baseHumanoidM: 2.1, baseConsumerM: 132,
        growthIndustrial: 0.075, growthWarehouse: 0.105, growthHumanoid: 0.21, growthConsumer: 0.055,
        industrialKWh: 20500, warehouseKWh: 13800, humanoidKWh: 1750, consumerKWh: 390,
        aiMultiplier: 0.55, regionalGridTWh: 11600
      }
    };

    const regionNames = Object.keys(regions);
    const regionFilters = document.getElementById("regionFilters");
    const editorRegion = document.getElementById("editorRegion");
    const inputGrid = document.getElementById("inputGrid");
    const pivotBody = document.getElementById("pivotBody");

    const inputSchema = [
      ["baseIndustrialM", "Industrial Robots in 2025 (millions)", 0.1],
      ["baseWarehouseM", "Warehouse Robots in 2025 (millions)", 0.1],
      ["baseHumanoidM", "Humanoid Robots in 2025 (millions)", 0.1],
      ["baseConsumerM", "Consumer Robots in 2025 (millions)", 1],
      ["growthIndustrial", "Industrial CAGR", 0.005],
      ["growthWarehouse", "Warehouse CAGR", 0.005],
      ["growthHumanoid", "Humanoid CAGR", 0.005],
      ["growthConsumer", "Consumer CAGR", 0.005],
      ["industrialKWh", "Industrial kWh per robot-year", 100],
      ["warehouseKWh", "Warehouse kWh per robot-year", 100],
      ["humanoidKWh", "Humanoid kWh per robot-year", 50],
      ["consumerKWh", "Consumer kWh per robot-year", 10],
      ["aiMultiplier", "AI/Cloud multiplier", 0.01],
      ["regionalGridTWh", "Regional baseline electricity (TWh)", 100]
    ];

    function makeRegionControls() {
      regionNames.forEach((name, idx) => {
        const id = `region_${idx}`;
        regionFilters.insertAdjacentHTML("beforeend", `
          <label><input type="checkbox" id="${id}" data-region="${name}" checked> ${name}</label>
        `);
        editorRegion.insertAdjacentHTML("beforeend", `<option value="${name}">${name}</option>`);
      });
      regionFilters.querySelectorAll("input").forEach(el => el.addEventListener("change", updateAll));
      editorRegion.addEventListener("change", renderInputFields);
    }

    function renderInputFields() {
      const region = regions[editorRegion.value];
      inputGrid.innerHTML = "";
      inputSchema.forEach(([key, label, step]) => {
        const isRate = key.startsWith("growth") || key === "aiMultiplier";
        const val = isRate ? Number(region[key]).toFixed(3) : region[key];
        inputGrid.insertAdjacentHTML("beforeend", `
          <div class="field">
            <label for="${key}">${label}</label>
            <input id="${key}" type="number" step="${step}" value="${val}" />
          </div>
        `);
      });

      inputGrid.querySelectorAll("input").forEach(input => {
        input.addEventListener("input", () => {
          const key = input.id;
          regions[editorRegion.value][key] = parseFloat(input.value) || 0;
          updateAll();
        });
      });
    }

    function selectedRegions() {
      return Array.from(regionFilters.querySelectorAll("input:checked")).map(i => i.dataset.region);
    }

    function projectRegion(regionParams, year) {
      const t = year - START_YEAR;
      const industrialM = regionParams.baseIndustrialM * (1 + regionParams.growthIndustrial) ** t;
      const warehouseM = regionParams.baseWarehouseM * (1 + regionParams.growthWarehouse) ** t;
      const humanoidM = regionParams.baseHumanoidM * (1 + regionParams.growthHumanoid) ** t;
      const consumerM = regionParams.baseConsumerM * (1 + regionParams.growthConsumer) ** t;

      const directKWh =
        industrialM * 1e6 * regionParams.industrialKWh +
        warehouseM * 1e6 * regionParams.warehouseKWh +
        humanoidM * 1e6 * regionParams.humanoidKWh +
        consumerM * 1e6 * regionParams.consumerKWh;

      const directTWh = directKWh / 1e9;
      const aiTWh = directTWh * regionParams.aiMultiplier;
      const totalTWh = directTWh + aiTWh;

      return { industrialM, warehouseM, humanoidM, consumerM, directTWh, aiTWh, totalTWh };
    }

    function aggregateForYear(year, pickedRegions) {
      const agg = {
        industrialM: 0, warehouseM: 0, humanoidM: 0, consumerM: 0,
        directTWh: 0, aiTWh: 0, totalTWh: 0, gridTWh: 0
      };
      pickedRegions.forEach(name => {
        const r = regions[name];
        const p = projectRegion(r, year);
        agg.industrialM += p.industrialM;
        agg.warehouseM += p.warehouseM;
        agg.humanoidM += p.humanoidM;
        agg.consumerM += p.consumerM;
        agg.directTWh += p.directTWh;
        agg.aiTWh += p.aiTWh;
        agg.totalTWh += p.totalTWh;
        agg.gridTWh += r.regionalGridTWh;
      });
      agg.sharePct = agg.gridTWh > 0 ? (agg.totalTWh / agg.gridTWh) * 100 : 0;
      return agg;
    }

    const ctx = document.getElementById("trendChart");
    const chart = new Chart(ctx, {
      type: "line",
      data: {
        labels: years,
        datasets: [
          { label: "Direct TWh", borderColor: "#2563eb", backgroundColor: "#2563eb22", data: [], tension: 0.2 },
          { label: "AI/Cloud TWh", borderColor: "#0ea5e9", backgroundColor: "#0ea5e922", data: [], tension: 0.2 },
          { label: "Total TWh", borderColor: "#0f766e", backgroundColor: "#0f766e22", data: [], tension: 0.2 }
        ]
      },
      options: {
        responsive: true,
        plugins: { legend: { position: "bottom" } },
        scales: {
          y: { title: { display: true, text: "TWh" } },
          x: { title: { display: true, text: "Year" } }
        }
      }
    });

    function updateAll() {
      const picked = selectedRegions();
      const yearly = years.map(y => aggregateForYear(y, picked));

      chart.data.datasets[0].data = yearly.map(y => y.directTWh.toFixed(1));
      chart.data.datasets[1].data = yearly.map(y => y.aiTWh.toFixed(1));
      chart.data.datasets[2].data = yearly.map(y => y.totalTWh.toFixed(1));
      chart.update();

      pivotBody.innerHTML = "";
      years.forEach((year, idx) => {
        const row = yearly[idx];
        pivotBody.insertAdjacentHTML("beforeend", `
          <tr>
            <td>${year}</td>
            <td>${row.industrialM.toFixed(2)}</td>
            <td>${row.warehouseM.toFixed(2)}</td>
            <td>${row.humanoidM.toFixed(2)}</td>
            <td>${row.consumerM.toFixed(2)}</td>
            <td>${row.directTWh.toFixed(1)}</td>
            <td>${row.aiTWh.toFixed(1)}</td>
            <td>${row.totalTWh.toFixed(1)}</td>
            <td>${row.sharePct.toFixed(2)}%</td>
          </tr>
        `);
      });

      const y2050 = yearly[yearly.length - 1] || { directTWh: 0, aiTWh: 0, totalTWh: 0, sharePct: 0 };
      document.getElementById("kpiDirect").textContent = y2050.directTWh.toFixed(1);
      document.getElementById("kpiAI").textContent = y2050.aiTWh.toFixed(1);
      document.getElementById("kpiTotal").textContent = y2050.totalTWh.toFixed(1);
      document.getElementById("kpiShare").textContent = y2050.sharePct.toFixed(2) + "%";
    }

    makeRegionControls();
    renderInputFields();
    updateAll();
  </script>
</body>
</html>
